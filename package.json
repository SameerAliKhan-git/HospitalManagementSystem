{
  "name": "hospital-management-system",
  "version": "1.0.0",
  "description": "A modern hospital management system with full functionality",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/backend/server.js",
    "client": "cd src/frontend && npm start",
    "install-all": "npm install && cd src/frontend && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
